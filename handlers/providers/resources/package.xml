<extensionPackage xmlns="http://issg.cs.duke.edu/shirako/manage/extensions/beans" id="9ab11f93-b24c-4f92-81e6-1623d611f0d5"> 
    <name>
        Handlers for various providers (BEN, LEARN, StarLight etc)
    </name> 
    <description>
        Provides handlers for managing vlans in providers
    </description> 
    <plugins> 
        <plugin id="1" type="10" actorType="3"> 
            <name>
                StarLight Handler
            </name> 
            <description>
                Provides support for managing VLANs over StarLight
            </description> 
            <configurationProperties> 
                <!-- Name of the handler file (relative to /ROOT/handlers) --> 
                <property> 
                    <name>
                        handler.file
                    </name> 
                    <value>
                        providers/starlight/handler.xml
                    </value> 
                </property> 
            </configurationProperties> 
        </plugin> 
        <plugin id="2" type="10" actorType="3"> 
            <name>
                LEARN Handler
            </name> 
            <description>
                Provides support for managing VLANs over LEARN
            </description> 
            <configurationProperties> 
                <!-- Name of the handler file (relative to /ROOT/handlers) --> 
                <property> 
                    <name>
                        handler.file
                    </name> 
                    <value>
                        providers/learn/handler.xml
                    </value> 
                </property> 
            </configurationProperties> 
        </plugin> 
        <plugin id="3" type="10" actorType="3"> 
            <name>
                BEN Handler
            </name> 
            <description>
                Provides support for managing curcuits over BEN
            </description> 
            <configurationProperties> 
                <!-- Name of the handler file (relative to /ROOT/handlers) --> 
                <property> 
                    <name>
                        handler.file
                    </name> 
                    <value>
                        providers/ben/ben.xml
                    </value> 
                </property> 
            </configurationProperties> 
        </plugin> 
        <plugin id="4" type="10" actorType="3"> 
            <name>
                Euca Handlers
            </name> 
            <description>
                Provides support for managing network in Euca sites 
            </description> 
            <configurationProperties> 
                <!-- Name of the handler file (relative to /ROOT/handlers) --> 
                <property> 
                    <name>
                        handler.file
                    </name> 
                    <value>
                        providers/euca-sites/handler.xml
                    </value> 
                </property> 
            </configurationProperties> 
        </plugin> 
    </plugins> 
</extensionPackage>