        <!-- OSCARS/ION --> 
        <plugin id="1" type="10" actorType="3"> 
            <name>
                 OSCARS/ION Handler 
            </name> 
            <description>
                 Provides support for OSCARS/ION circuit service. 
            </description> 
            <configurationTemplate>
                 oscars/config.vm 
            </configurationTemplate> 
            <configurationProperties> 
                <!-- Name of the handler file (relative to /ROOT/handlers) --> 
                <property> 
                    <name>
                         handler.file 
                    </name> 
                    <value>
                         oscars/handler.xml 
                    </value> 
                </property> 
            </configurationProperties> 
        </plugin> 
    </plugins> 
</extensionPackage>