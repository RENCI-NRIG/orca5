<extensionPackage xmlns="http://issg.cs.duke.edu/shirako/manage/extensions/beans" id="87DBB2BE-7977-4463-A0CB-F6043735DEF9"> 
    <name>
        EC2 Handler Library
    </name> 
    <description>
        Provides EC2/Eucalyptus handler.
    </description> 
    <plugins> 
        <!-- Eucalyptus --> 
        <plugin id="1" type="10" actorType="3"> 
            <name>
                EC2/Eucalyptus Handler
            </name> 
            <description>
                Provides support for EC2 VMs.
            </description> 
            <configurationTemplate>
                ec2/config.vm
            </configurationTemplate> 
            <configurationProperties> 
                <!-- Name of the handler file (relative to /ROOT/handlers) --> 
                <property> 
                    <name>
                        handler.file
                    </name> 
                    <value>
                        ec2/handler.xml
                    </value> 
                </property> 
            </configurationProperties> 
        </plugin> 
    </plugins> 
</extensionPackage>