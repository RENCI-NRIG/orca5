<extensionPackage xmlns="http://issg.cs.duke.edu/shirako/manage/extensions/beans" id="2b48b4f0-2a36-11df-8a39-0800200c9a66"> 
    <name>
         NLR handler 
    </name> 
    <description>
         Provides a handler for creating vlans over NLR 
    </description> 
    <plugins> 
        <!-- Xen + ZFS root disk --> 
        <plugin id="1" type="10" actorType="3"> 
            <name>
                 NLR Handler 
            </name> 
            <description>
                 Provides support for creating VLANs over NLR 
            </description> 
            <configurationProperties> 
                <!-- Name of the handler file (relative to /ROOT/handlers) --> 
                <property> 
                    <name>
                         handler.file 
                    </name> 
                    <value>
                         network/handler.xml 
                    </value> 
                </property> 
            </configurationProperties> 
        </plugin> 
    </plugins> 
</extensionPackage>