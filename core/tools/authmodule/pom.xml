<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>orca.core</groupId>
	<artifactId>tools-authmodule</artifactId>
	<packaging>jar</packaging>
	<name>Orca Axis2 Authentication Module</name>

	<parent>
		<groupId>orca.core</groupId>
		<artifactId>tools</artifactId>
		<version>5.4.2-SNAPSHOT</version>
		<relativePath>../pom.xml</relativePath>
	</parent>

	<dependencies>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>util</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>orca.dependencies</groupId>
			<artifactId>axis2</artifactId>
			<version>${project.version}</version>
			<type>pom</type>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.jvnet.maven-antrun-extended-plugin</groupId>
				<artifactId>maven-antrun-extended-plugin</artifactId>
				<executions>
					<execution>
						<id>makepkg</id>
						<phase>package</phase>
						<configuration>
							<tasks>
								<jar destfile="target/orcaauth-${project.version}.mar">
									<fileset dir="resources">
										<include name="META-INF/**" />
									</fileset>
									<fileset dir="target/classes">
										<include name="**/*" />
									</fileset>
								</jar>
								<attachArtifact file="target/orcaauth-${project.version}.mar" classifier="package" type="mar" />
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
