<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>orca.tools</groupId>
	<artifactId>build</artifactId>
	<packaging>jar</packaging>
	<version>1.0</version>
	<name>Orca Build Tools</name>
	<url>https://geni-orca.renci.org/orca-doc</url>

	<description>
		A small collection of useful classes to bootstrap Orca's build process
	</description>

	<organization>
		<name>Network/Internet Computing Lab</name>
		<url>http://www.nicl.cs.duke.edu/</url>
	</organization>

	<!-- Project licenses -->
	<licenses>
		<license>
			<name>Eclipse Public Licence, Version 1.0</name>
			<url>http://www.nicl.cs.duke.edu/eclipse1.0.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<properties>
		<orca.tools.build.version>1.0</orca.tools.build.version>
		<orca.repository.id>orca</orca.repository.id>
		<orca.repository.url>http://ci-dev.renci.org/nexus/content/repositories/geni-orca-libs</orca.repository.url>
		<orca.website.id>orca.website</orca.website.id>
		<orca.website.url>dav:https://geni-orca.renci.org/orca-doc/current</orca.website.url>
	</properties>

	<distributionManagement>
		<snapshotRepository>
			<id>geni-orca-snapshots</id>
			<name>Orca Snapshots Maven Repository</name>
			<url>http://ci-dev.renci.org/nexus/content/repositories/geni-orca-snapshots</url>
		</snapshotRepository>
                <repository>
                        <id>geni-orca-libs</id>
                        <name>Orca Project Maven Libs Repository</name>
                        <url>http://ci-dev.renci.org/nexus/content/repositories/geni-orca-libs</url>
                </repository>
		<site>
			<id>orca.website</id>
			<url>dav:https://geni-orca.renci.org/orca-doc/current</url>
		</site>
	</distributionManagement>

	<repositories>
		<!-- Orca main repository -->
		<repository>
			<id>orca</id>
			<name>Orca Project Maven Repository</name>
			<url>http://ci-dev.renci.org/nexus/content/repositories/geni-orca-libs</url>
		</repository>
		<!-- Codehous repository -->
		<!--
		<repository>
			<id>codehous.mojo</id>
			<name>Codehous Mojos</name>
			<url>http://repository.codehaus.org/org/codehaus/mojo/</url>
		</repository>
		-->
	</repositories>

	<dependencies>
		<dependency>
			<groupId>ant</groupId>
			<artifactId>ant</artifactId>
			<version>1.7.0</version>
		</dependency>
	</dependencies>

	<!-- Plugin configurations -->
	<build>
		<plugins>
			<!-- the compiler -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
		</plugins>
		<extensions>
			<!-- enable webdav wagon support -->
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-webdav</artifactId>
				<version>1.0-beta-2</version>
			</extension>
		</extensions>
	</build>
</project>
